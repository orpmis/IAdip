<Application x:Class="InstaArt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InstaArt"
             StartupUri="Forms/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="AR_text">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="15"/>
        </Style>

        <Style TargetType="Button" x:Key="MainButton">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="TextBox" x:Key="NoFocused">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="60"/>
        </Style>

        <Style TargetType="TextBox" x:Key="Focused" BasedOn="{StaticResource NoFocused}">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="WrapPanel" x:Key="FolderView">
           
        </Style>

       
    </Application.Resources>
</Application>
