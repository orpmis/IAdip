<Window x:Class="InstaArt.GroupCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaArt"
        mc:Ignorable="d"
        Title="GroupCreate" Height="350" Width="460">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="GroupName" Margin="15" Height="50"/>
        <TextBox Name="ShortDescription" Margin="15" Height="50" Grid.Column="1"/>
        <TextBox Name="Describtion" Margin="15" Grid.Row="1" Grid.ColumnSpan="2" TextWrapping="Wrap"/>
        <Button Content="Создать" Name="CreateGroup" Margin="10" Grid.Row="3" Grid.ColumnSpan="2" Width="150" Click="CreateGroup_Click"/>
    </Grid>
</Window>
