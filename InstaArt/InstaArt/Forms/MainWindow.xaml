<Window x:Class="InstaArt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaArt"
        mc:Ignorable="d"
        Title="MainWindow" Height="385" Width="635" MinHeight="385" MinWidth="635" MaxHeight="385" MaxWidth="635">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" Style="{StaticResource AR_text}" />
        <TextBox Grid.Row="1" Name="Nickenter" GotFocus="Nickenter_GotFocus" Text="Введите ник" Style="{StaticResource NoFocused}" LostFocus="Nickenter_LostFocus"/>
        <TextBox Grid.Row="2" Name="Passenter" Text="Введите пароль" Style="{StaticResource NoFocused}" LostFocus="Passenter_LostFocus" GotFocus="Passenter_GotFocus"/>
        <Button Grid.Row="3" Width="250" Height="50" Content="Войти" FontSize="25" Click="Button_Click"/>
        <TextBlock Grid.Row ="4" Text="Еще нет аккаунта?" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="TextBlock_MouseDown"/>
    </Grid>
</Window>
