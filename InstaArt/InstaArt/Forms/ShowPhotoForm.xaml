<Window x:Class="InstaArt.ShowPhotoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaArt"
        mc:Ignorable="d"
        Title="ShowPhotoForm" Height="800" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Image Name="AnImage" Grid.Row="1" Margin="10"/>
        <TextBlock Name="PhotoName" Style="{StaticResource AR_text}" Text="dsaAS"/>
        <TextBlock Name="Describtion" Grid.Row="2" Margin="10" Height="Auto"/>
        <StackPanel Grid.Row="3" HorizontalAlignment="Left" Margin="10">
            <TextBlock Text="Нравится" FontSize="20"/>
        </StackPanel>
        <StackPanel  Grid.Row="3" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Комментарии" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
